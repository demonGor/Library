@model LibraryDataEF.BOOKS_AUTHORS

@{
    IEnumerable<LibraryDataEF.BOOKS> CmpList = ViewBag.CmpList;
    ViewBag.Title = "Видалення зв'язку";
}

<h2>@ViewBag.Title</h2>

<h3>Ви впевнені, що хочете видалити цей зв'язок?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AUTHORS.AU_NAME)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AUTHORS.AU_NAME)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BOOKS.BK_NAME)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BOOKS.BK_NAME)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-default" /> |
            @Html.ActionLink("Назад", "Details", "BOOK", new { id = CmpList.First().BK_ID },null)
        </div>
    }
</div>
